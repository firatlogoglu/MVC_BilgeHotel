@model CustomerBookingsVM

@{
    ViewBag.Title = "Kişi Ekle/Bul";
    Layout = "~/Areas/BookingC/Views/Shared/_BookingCLLayout.cshtml";
}
<br />
<h2>@ViewBag.Title</h2>
<br />
@using (Html.BeginForm("FindAddCustomer", "Booking", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @TempData["BookingCustomerError"]
        <div class="form-group">
            <div class="col-md-10">
                @Html.ValidationMessageFor(model => model.BookingID, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.BookingID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TCNO, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TCNO, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TCNO, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Bul/Ekle" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Rezervasyondaki Kişiler Sayfasına Geri Dön", "BookingCustomers", new { id = ViewBag.BID })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
