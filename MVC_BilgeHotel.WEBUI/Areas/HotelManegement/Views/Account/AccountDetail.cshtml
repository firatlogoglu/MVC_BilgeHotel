@model Employee
@{
    ViewBag.Title = "Maaş Durumu ve Kişisel Bilgiler";
    Layout = "~/Areas/HotelManegement/Views/Shared/_HMHLayout.cshtml";
}

<h4>Maaş Durumu</h4>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shift)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HourlyPay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Days)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EkstraHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paid)
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Role</td>
            <td>@Model.Shift</td>
            <td>@Model.HourlyPay</td>
            <td>@Model.Hours</td>
            <td>@Model.Days</td>
            <td>@Model.EkstraHours</td>
            <td>@Model.TotalPay</td>
            <td>@Model.Paid</td>
        </tr>
    </tbody>
</table>

@using (Html.BeginForm("Edit", "Employee", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form">
        <h4>Kişisel Bilgileriniz</h4>
        <br />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.Role)
        @Html.HiddenFor(model => model.TotalPay)
        @Html.HiddenFor(model => model.Paid)
        @Html.HiddenFor(model => model.Shift)
        @Html.HiddenFor(model => model.Days)
        @Html.HiddenFor(model => model.Hours)
        @Html.HiddenFor(model => model.EkstraHours)
        @Html.HiddenFor(model => model.HourlyPay)
        <div class="form-group">
            @Html.LabelFor(model => model.ImagePath, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.ImagePath, new { type = "file", @class = "form-control", style = "font-size:10px", @name = "ImagePath" })
                <img src="@Model.ImagePath" style="width:30px; height:30px" />
                @Html.ValidationMessageFor(model => model.ImagePath, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TCNO, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TCNO, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TCNO, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-md-2" })
